<div i18n:domain="schooltool">
  <h2 i18n:translate="">Fees</h2>
  <div>
    <table class="fees">
      <thead>
        <th i18n:translate="" class="date">Date</th>
        <th i18n:translate="">Title</th>
        <th i18n:translate="" class="amount">Amount</th>
      </thead>
      <tbody>
        <tr tal:repeat="entry view/entries">
          <td tal:content="entry/date" />
          <td>
            <tal:block content="entry/title" />
            <a class="modify" href="" title="Edit this amount"
               tal:attributes="href entry/edit_url"
               i18n:attributes="title"
               tal:condition="view/canModify">
              <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
                   alt="Edit"
                   i18n:attributes="alt" />
            </a>
          </td>
          <td tal:content="entry/amount" />
        </tr>
        <tr>
          <td colspan="2" i18n:translate="">Amount due</td>
          <td tal:content="view/balance" />
        </tr>
      </tbody>
    </table>
    <div class="buttons">
      <h3 class="done-link">
        <a tal:attributes="href string:${context/@@absolute_url}/fees/add_debit.html"
           i18n:translate="">Add Debit</a>
      </h3>
      <h3 class="done-link">
        <a tal:attributes="href string:${context/@@absolute_url}/fees/add_credit.html"
           i18n:translate="">Add Credit</a>
      </h3>
    </div>
  </div>
</div>
