<div i18n:domain="schooltool" tal:define="courses view/courses">
  <form method="post" tal:attributes="action request/getURL"
        tal:condition="courses">
    <input type="hidden" name="form-submitted" value="yes" />
    <table>
      <thead>
        <tr>
          <th i18n:translate="">Order</th>
          <th i18n:translate="">SchoolTool ID</th>
          <th i18n:translate="">Title</th>
          <th i18n:translate="">Course ID</th>
        </tr>
      </thead>
      <tr tal:repeat="course courses">
        <td>
          <select name=""
                  onchange="this.form.submit()"
                  tal:attributes="name string:pos.${course/__name__}">
            <tal:block repeat="num view/positions">
              <option value="1"
                      tal:condition="python:num != course['pos']"
                      tal:attributes="value num"
                      tal:content="num" />
              <option value="1" selected="selected"
                      tal:condition="python:num == course['pos']"
                      tal:attributes="value num"
                      tal:content="num" />
            </tal:block>
          </select>
        </td>
        <td tal:content="course/__name__" />
        <td tal:content="course/title" />
        <td tal:content="course/course_id" />
      </tr>
    </table>
  </form>
  <h3 i18n:translate="" tal:condition="not:courses">There are none.</h3>
  <h3 class="done-link">
    <a tal:attributes="href view/done_url"
       i18n:translate="">Done</a>
  </h3>
</div>
