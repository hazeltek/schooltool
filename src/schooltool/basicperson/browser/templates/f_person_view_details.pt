<tal:block i18n:domain="schooltool">
<div class="person-info">
  <tal:block tal:replace="structure context/schooltool:content/schooltool.person.FlourishInfo"/>
  <div id="messages">
    <h2 i18n:translate="">Messages</h2>
    <tal:block content="structure view/view/providers/ajax/messages_table" />
</div>
</div>
<h3 tal:condition="view/canModify" class="done-link">
  <a tal:attributes="href view/done_link" i18n:domain="schooltool" i18n:translate="">Done</a>
</h3>
<script>
  ST.state.push();
</script>
<tal:script tal:replace="structure scriptlocal:
                         active_accordion view/active_accordion;" />
<script>
$(document).ready(function() {
    var active_accordion = ST.local.active_accordion;
    return function() {
        // accordion setup
        var index = $(ST.dialogs.jquery_id(active_accordion)).index();
        if (index == -1) {
            index = 0;
        }
        $( ".person-info" ).accordion({
            active: index,
            header: 'h2',
            collapsible: true,
            autoHeight: false,
        });
}}());
</script>
<script>
  ST.state.pop();
</script>
</tal:block>
