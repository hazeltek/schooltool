<div i18n:domain="schooltool" tal:attributes="id view/__name__">
  <h2 tal:content="view/title" />
  <div>
    <h3>
      <tal:block tal:content="view/title" />
      <a class="modify" href="" title="Manage this person's level"
         tal:attributes="href string:${context/@@absolute_url}/edit_level.html"
         i18n:attributes="title"
         tal:condition="view/canModify">
        <img tal:attributes="src context/++resource++schooltool.skin.flourish/edit-icon.png"
             alt="Edit"
             i18n:attributes="alt" />
      </a>
    </h3>
    <table>
      <thead>
        <tr>
          <th i18n:translate="">Date</th>
          <th i18n:translate="">Level</th>
          <th i18n:translate="">State</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="info view/all_levels">
          <td tal:content="info/date" />
          <td tal:content="info/level/title" />
          <td tal:content="info/title" />
        </tr>
      </tbody>
    </table>
  </div>
</div>
