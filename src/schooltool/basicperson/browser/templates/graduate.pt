<div i18n:domain="schooltool">
  <form method="post" tal:attributes="action request/getURL">
    <table>
      <thead>
        <tr>
          <th i18n:translate="">Username</th>
          <th i18n:translate="">Last name</th>
          <th i18n:translate="">First name</th>
          <th i18n:translate="">Current Level</th>
          <th i18n:translate="">Graduate?</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="student view/students">
          <td tal:content="student/obj/username" />
          <td tal:content="student/obj/last_name" />
          <td>
            <tal:block content="student/obj/first_name" />
            <tal:block content="student/obj/middle_name" />
          </td>
          <td tal:content="student/current_level/title" />
          <td>
            <input type="checkbox" checked="checked"
                   tal:attributes="name student/selector_id" />
          </td>
        </tr>
      </tbody>
    </table>
    <div class="temporal-relationship-button-options">
      <fieldset>
        <div class="row">
          <div class="label">
            <label for="available_table-ajax-available_table--date">
              <span>
                Effective date
              </span>
            </label>
          </div>
          <p class="hint">(yyyy-mm-dd)</p>
          <div class="widget">
            <input type="text" tal:attributes="value request/date|view/date"
                   name="date"
                   class="text-widget date-field hasDatepicker" />
          </div>
        </div>
      </fieldset>
    </div>
    <div class="buttons">
      <input type="submit" class="button-ok" value="Submit" name="SUBMIT" />
      <input type="submit" class="button-cancel" value="Cancel" name="CANCEL" />
    </div>
    <input type="hidden" name="schoolyear_id"
           tal:attributes="value request/schoolyear_id" />
  </form>
</div>
