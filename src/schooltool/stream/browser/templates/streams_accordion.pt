<div i18n:domain="schooltool">
  <h2 i18n:translate="">Streams</h2>
  <div>
    <h3>
      <tal:block i18n:translate="">Stream memberships</tal:block>
    </h3>
    <div class="tree_list streams_tree" tal:condition="view/schoolyears">
      <ul>
        <li tal:repeat="schoolyear view/schoolyears" class="year">
          <a tal:attributes="href schoolyear/obj/@@absolute_url;
                             title schoolyear/obj/title;
                             class schoolyear/css_class;"
             tal:content="schoolyear/obj/title"></a>
          <ul>
            <li tal:repeat="stream_data schoolyear/streams" class="stream">
              <a tal:attributes="href
                                 string:${stream_data/obj/@@absolute_url}?done_link=${request/URL};
                               title stream_data/title"
                 tal:content="stream_data/title"
                 class="leaf_url"></a>
              <ul>
                <li tal:repeat="state stream_data/states">
                  <tal:block replace="state/title" />
                  (<tal:block replace="state/date/@@mediumDate" />)
                </li>
              </ul>
            </li>
          </ul>
        </li>
      </ul>
    </div>
    <p tal:condition="not: view/schoolyears"
        i18n:translate="">
      The person is not a member of any streams.
    </p>
  </div>
</div>
